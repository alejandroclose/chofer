 <div id="fotoService">
          <select name="choice" id="choice" size="3" onchange="createLogo(this.value)">
            <option value="0">Taxi</option>
            <option value="1">Uber</option>
            <option value="2">Cabify</option>
          </select>
          <div id="display_here"></div>
        </div>

<script>
  function createLogo(userChoice) {
    var output = document.getElementById("display_here");
    output.innerHTML = "";

    var links = [
      "/images/taxi2.jpg",
      "/images/uber.png",
      "/images/cabify.png",
    ];

    var choices = ["Taxi", "Uber", "Cabify"];

    var img = '<img src="' + links[userChoice] + '">';

    output.innerHTML = img;
  }
</script>
